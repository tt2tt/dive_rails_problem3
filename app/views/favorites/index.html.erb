<table>
  <thead>
    <tr>
      <th>お気に入り</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
    <tr>
      <td><%= favorite.sentence.content %></td>
      <td><%= image_tag favorite.picture.images[0].url %></td>
      <td><%= link_to 'Show', picture_path(favorite.picture.id) %></td>
    </tr>
    <% end %>
  </tbody>

</table>
