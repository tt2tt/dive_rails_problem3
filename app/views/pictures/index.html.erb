<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% count = 0 %>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= @sentences[count].content %></td>
        <td><%= image_tag picture.images[0].url %></td>
        <td><%= link_to 'Show', picture %></td>
        <% if current_user %>
          <% if current_user.id == picture.user_id%>
            <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
          <% end %>
        <% end %>
      <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% count += 1 %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
