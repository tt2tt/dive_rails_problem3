
<% unless @picture.user_id == current_user.id %>
  <% if @picture.present? %>
    <%= link_to 'お気に入りを解除する', favorite_path(id: @picture.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
  <strong>Images:</strong>

  <% @picture.images.each do |picture| %>
    <%= image_tag picture.url %>
  <% end %>


  <%= link_to 'Edit', edit_picture_path(@picture) %>
  <%= link_to 'Back', pictures_path %>
