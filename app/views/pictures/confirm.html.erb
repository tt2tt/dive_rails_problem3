<h1>確認画面</h1>
<%= form_with(model: @picture, url: pictures_path, local: true) do |form| %>
<%= fields_for(@sentence) do |sentence| %>
  <%= sentence.text_field :content %>
<% end %>
<% @picture.images.each do |picture| %>
  <%= image_tag picture.url %>
<% end %>
  <%= form.hidden_field :images_cache %>
  <%= form.submit "投稿する" %>
<% end %>

<%= form_for(@picture, url:new_picture_path, local:true, method:"get") do |form| %>
  <%= fields_for(@sentence) do |sentence| %>
    <%= sentence.hidden_field :content %>
  <% end %>
  <%= form.hidden_field :images_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
